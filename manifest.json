{
  "manifest_version": 3,
  "name": "HTML Viewer Sidebar",
  "version": "1.0",
  "description": "Display page HTML in sidebar",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "action": {},
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
