{
  "manifest_version": 3,
  "name": "Content Extractor",
  "version": "1.0",
  "description": "Extract main content in markdown format with translation",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {},
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "libs/Readability.js",
      "libs/turndown.js",
      "content.js"
    ]
  }]
}
